<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cmu.p2photo">
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!-- TODO REMOVE cleartext true when implementing security features -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".cloud.AddUserToAlbum"></activity>
        <activity android:name=".cloud.ViewAlbum" />
        <activity android:name=".cloud.FindUser" />
        <activity android:name=".cloud.P2photo" />
        <activity android:name=".Sign_up" />
        <activity android:name=".wifi.WifiDirect" />
        <activity android:name=".cloud.Dropbox" />
        <activity android:name=".cloud.CreateAlbum" />
        <activity android:name=".cloud.ListAlbums" />
        <activity android:name=".cloud.AddUser" />
        <activity android:name=".cloud.ShowUsers" />
        <activity android:name=".cloud.ShowUserAlbums" />
        <activity android:name=".cloud.ShowAllUsers" />
        <activity android:name=".cloud.ViewPhotos" />
        <activity android:name=".cloud.ViewPhoto" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.dropbox.core.android.AuthActivity"
            android:configChanges="orientation|keyboard"
            android:launchMode="singleTask">
            <intent-filter>
                <data android:scheme="db-3izhx7xtgnuua5m" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>